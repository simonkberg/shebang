{
  "name": "shebang",
  "version": "1.0.0",
  "private": true,
  "description": "shebang.consulting",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonkberg/shebang"
  },
  "license": "MIT",
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "scripts": {
    "build": "gatsby build",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier:check": "prettier --list-different '**/*.{js,json,md}'",
    "prettier:format": "prettier --write '**/*.{js,json,md}'",
    "start": "gatsby develop",
    "test": "flow && yarn eslint:check && yarn prettier:check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "flow focus-check",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.cache/",
      "/public/"
    ]
  },
  "dependencies": {
    "@emotion/core": "10.0.4",
    "@emotion/styled": "10.0.4",
    "gatsby": "2.0.67",
    "gatsby-plugin-flow": "1.0.2",
    "gatsby-plugin-manifest": "2.0.12",
    "gatsby-plugin-netlify": "2.0.6",
    "gatsby-plugin-offline": "2.0.19",
    "gatsby-plugin-react-helmet": "3.0.4",
    "gatsby-plugin-sitemap": "2.0.3",
    "prop-types": "15.6.2",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-helmet": "5.2.0",
    "sanitize.css": "8.0.0"
  },
  "devDependencies": {
    "@simonkberg/eslint-config": "11.0.0",
    "babel-plugin-emotion": "10.0.4",
    "eslint": "5.10.0",
    "flow-bin": "0.88.0",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  }
}
