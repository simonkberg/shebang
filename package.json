{
  "name": "shebang",
  "version": "1.0.0",
  "private": true,
  "description": "shebang.consulting",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonkberg/shebang"
  },
  "license": "MIT",
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "scripts": {
    "build": "gatsby build",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier:check": "prettier --list-different '**/*.{js,json,md}'",
    "prettier:format": "prettier --write '**/*.{js,json,md}'",
    "precommit": "lint-staged",
    "start": "gatsby develop",
    "test": "flow && yarn eslint:check && yarn prettier:check"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "flow focus-check",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.cache/",
      "/public/"
    ]
  },
  "dependencies": {
    "emotion": "^9.2.4",
    "emotion-server": "^9.2.4",
    "gatsby": "^1.9.247",
    "gatsby-link": "^1.6.40",
    "gatsby-plugin-emotion": "^1.1.17",
    "gatsby-plugin-netlify": "^1.0.21",
    "gatsby-plugin-offline": "^1.0.18",
    "gatsby-plugin-react-helmet": "^2.0.10",
    "gatsby-plugin-sitemap": "^1.2.25",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-emotion": "^9.2.4",
    "react-helmet": "^5.2.0",
    "sanitize.css": "^6.0.0"
  },
  "devDependencies": {
    "@simonkberg/eslint-config": "^9.0.1",
    "eslint": "^4.18.0",
    "flow-bin": "^0.76.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.12.0"
  }
}
