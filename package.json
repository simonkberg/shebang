{
  "name": "shebang",
  "version": "1.0.0",
  "private": true,
  "description": "shebang.consulting",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonkberg/shebang"
  },
  "license": "MIT",
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "scripts": {
    "build": "gatsby build",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier:check": "prettier --list-different '**/*.{js?(on),md,y?(a)ml}'",
    "prettier:format": "prettier --write '**/*.{js?(on),md,y?(a)ml}'",
    "start": "gatsby develop",
    "test": "flow check && yarn eslint:check && yarn prettier:check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "flow focus-check"
    ],
    "*.{json,md,y?(a)ml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.cache/",
      "/public/"
    ]
  },
  "dependencies": {
    "@emotion/core": "10.0.28",
    "@emotion/styled": "10.0.27",
    "gatsby": "2.23.1",
    "gatsby-plugin-flow": "1.3.4",
    "gatsby-plugin-manifest": "2.4.10",
    "gatsby-plugin-netlify": "2.3.4",
    "gatsby-plugin-offline": "3.2.8",
    "gatsby-plugin-react-helmet": "3.3.3",
    "gatsby-plugin-sitemap": "2.4.4",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet": "6.1.0",
    "sanitize.css": "11.0.1"
  },
  "devDependencies": {
    "@simonkberg/eslint-config": "23.0.0",
    "babel-plugin-emotion": "10.0.33",
    "eslint": "7.2.0",
    "flow-bin": "0.128.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.9",
    "prettier": "2.0.5"
  },
  "resolutions": {
    "serialize-javascript": "3.1.0"
  }
}
