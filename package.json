{
  "name": "shebang",
  "version": "1.0.0",
  "private": true,
  "description": "shebang.consulting",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonkberg/shebang"
  },
  "license": "MIT",
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "scripts": {
    "build": "gatsby build",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier:check": "prettier --list-different '**/*.{js,json,md}'",
    "prettier:format": "prettier --write '**/*.{js,json,md}'",
    "start": "gatsby develop",
    "test": "flow check && yarn eslint:check && yarn prettier:check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "flow focus-check",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.cache/",
      "/public/"
    ]
  },
  "dependencies": {
    "@emotion/core": "10.0.21",
    "@emotion/styled": "10.0.17",
    "gatsby": "2.15.35",
    "gatsby-plugin-flow": "1.1.10",
    "gatsby-plugin-manifest": "2.2.21",
    "gatsby-plugin-netlify": "2.1.19",
    "gatsby-plugin-offline": "3.0.14",
    "gatsby-plugin-react-helmet": "3.1.11",
    "gatsby-plugin-sitemap": "2.2.17",
    "prop-types": "15.7.2",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-helmet": "5.2.1",
    "sanitize.css": "11.0.0"
  },
  "devDependencies": {
    "@simonkberg/eslint-config": "18.1.0",
    "babel-plugin-emotion": "10.0.21",
    "eslint": "6.5.1",
    "flow-bin": "0.109.0",
    "husky": "3.0.8",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2"
  }
}
